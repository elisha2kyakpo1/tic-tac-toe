#!/usr/bin/env ruby

# welcome message
def welcome_message
  puts <<~HEREDOC
    *****--welcome to Azeez and Helcio tic tac toe--*****
         press any key to start the game and have fun!
  HEREDOC
end

# player name
def player_names
  players = []
  puts 'player one name?'
  players[0] = gets.chomp

  puts 'player two name?'
  players[1] = gets.chomp

  players
end

# def user_input()

# end

# border display
def display_border
  p "player should choose a valid number between 1 and 9!"

  puts <<-HEREDOC
    1 | 2 | 3
  ---------------
    4 | 5 | 6
  ---------------
    7 | 8 | 9
  HEREDOC
end

def player_turn(names)
  p "#{names[0]} please choose a position on the board"
  position = gets.chomp.to_i
  position
end


def user_input
  p 'choose a number between 1 and 9'
  gets.chomp.to_i
end

# players symbols
def players_symbols(players)
  puts <<~HEREDOC
    #{players[0]} symbol is X and #{players[1]} is O
  HEREDOC
end

def check_user_play_position(user_input)
  if !user_input.between?(1, 9)
    p 'please choose a valid number between 1-9 '
    return false
  else
    p 'you have printed a valid number'
    return true
  end
end


##### start game #####
welcome_message
key = gets

names = player_names if key

